<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:contentDescription="Back"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Super Flash Sale"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ImageView
        android:id="@+id/sepatu"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:contentDescription="sepatu"
        android:src="@drawable/sepatu" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Repeat this block for each category -->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageView1"
                    android:src="@drawable/fl_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewTitle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nike Air 270"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPrice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$300"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewDiscount1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24% Off"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />

                <ImageView
                    android:id="@+id/trash1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@drawable/trash" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:src="@drawable/fl_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nike Air 270"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPrice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$300"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/textViewDiscount2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24% Off"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />

                <ImageView
                    android:id="@+id/trash2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trash"
                    android:layout_marginLeft="45dp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Repeat this block for each category -->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:src="@drawable/fl_3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nike Air 270"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPrice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$299,43"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewDiscount3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24% Off"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />

                <ImageView
                    android:id="@+id/trash3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:src="@drawable/trash" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:src="@drawable/mg_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nike Air 270"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPrice4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$288"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/textViewDiscount4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24% Off"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark" />

                <ImageView
                    android:id="@+id/trash4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/trash"
                    android:layout_marginLeft="45dp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
